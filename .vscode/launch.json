{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Serverless Offline",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/serverless",
            "args": [
                "offline",
                "start",
                "--httpPort",
                "4000",
                "--noTimeout"
            ],
            "windows": {
                "program": "${workspaceRoot}\\node_modules\\serverless\\bin\\serverless"
            }
        }
    ]
}